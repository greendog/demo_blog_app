<div class="row">
  <div class="col-lg-12">
    <h3>Оставить комментарий</h3>
  </div>
</div>

<div class="col-lg-12 widget-area no-padding blank">
  <div class="status-upload">
    <%= semantic_form_for :comment, :url => front_office.post_comments_path(@post, @comment), :html => {:method => :post, class: 'form-horizontal'} do |f| %>
        <% f.semantic_errors if @comment.errors.any? %>
        <div class="form-group">
          <%= f.input :name, label: I18n.t('activerecord.attributes.comment.name'), :input_html => {class: 'name-comment'} %>
          <%= f.input :email, as: :email, label: I18n.t('activerecord.attributes.comment.email'), :input_html => {class: 'email-comment'} %>
          <%= f.input :body, :as => :text, :label => I18n.t('activerecord.attributes.comment.body'), :input_html => {class: 'input-comment', :rows => 10} %>
          <%#= f.input(:captcha, :as => :simple_captcha) if cannot? :create, Comment %>
          <%= show_simple_captcha if cannot? :create, Comment %>
        </div>
        <%= f.action :submit, label: 'Отправить', :as => :button, :button_html => {class: 'btn btn-default fa fa-share'} %>
    <% end %>
  </div>
</div>